<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/post_layout"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/txt_post_det_title"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="description"
                android:id="@+id/txt_post_det_desc"
                android:layout_below="@+id/txt_post_det_bid"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location"
                android:id="@+id/txt_post_det_loc"
                android:layout_below="@+id/txt_post_det_desc"
                android:layout_alignParentStart="true"
                android:layout_marginTop="51dp"
                android:textColor="#797979" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_post_det_loc"
                android:layout_alignParentStart="true"
                android:layout_marginTop="49dp"
                android:background="#3586ff"
                android:weightSum="1"
                android:elevation="10dp"
                android:id="@+id/layout_post_det_user">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/img_post_det_pic"
                    android:layout_weight="0.29"
                    android:background="#ff0000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Owner Name"
                    android:id="@+id/txt_post_det_owner"
                    android:layout_weight="0.29"
                    android:textSize="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_post_det_pic"
                    android:layout_marginStart="30dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$$$$"
                android:id="@+id/txt_post_det_bid"
                android:layout_marginEnd="27dp"
                android:textSize="40dp"
                android:layout_below="@+id/txt_post_det_title"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Comments"
                android:id="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>